{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start:webview",
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "."
					}
				}
			],
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"statusbar": {
					"label": "$(browser) Webview",
					"hide": false
				}
			}
		}
	]
}
